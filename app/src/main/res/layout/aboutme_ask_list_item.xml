<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_margin">
        <ImageView
            android:id="@+id/que_headimgurl"
            android:src="@mipmap/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/base_margin"/>
        <TextView
            android:id="@+id/que_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3dp"
            android:text="李四|中山大学 软件学院大四学生"/>
    </LinearLayout>

    <TextView
        android:id="@+id/que_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/base_big_font"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:text="师兄好，我想问问腾讯的产品经理的流程是怎么样的， 能说说么？"/>
    <TextView
        android:id="@+id/ans_status"
        android:text="未回答"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
