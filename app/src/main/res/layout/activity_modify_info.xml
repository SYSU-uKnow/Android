<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="com.xuewen.xuewen.ModifyInfoActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFCCCCCC"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_toolbar_height"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <TextView
                android:text="修改信息"
                android:textSize="@dimen/base_big_font"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/base_margin"
                android:paddingRight="@dimen/base_margin"
                android:paddingTop="@dimen/base_margin"
                android:paddingBottom="@dimen/base_margin">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"
                    android:textSize="@dimen/base_medium_font"/>
                <ImageView
                    android:id="@+id/avatar"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/avatar"
                    android:layout_width="@dimen/base_mediun_avatar"
                    android:layout_height="@dimen/base_mediun_avatar" />
            </RelativeLayout>
            <View
                android:background="@color/gray_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_small_margin"/>
            <RelativeLayout
                android:paddingTop="@dimen/base_margin"
                android:paddingBottom="@dimen/base_margin"
                android:paddingLeft="@dimen/base_margin"
                android:paddingRight="@dimen/base_margin"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <TextView
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:text="昵称"
                    android:textSize="@dimen/base_medium_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:text="张三"
                    android:textSize="@dimen/base_medium_font"
                    android:textColor="@color/black_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="2/10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <View
                android:background="@color/gray_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_small_margin"/>

            <RelativeLayout
                android:paddingTop="@dimen/base_margin"
                android:paddingBottom="@dimen/base_margin"
                android:paddingLeft="@dimen/base_margin"
                android:paddingRight="@dimen/base_margin"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <TextView
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:text="身份"
                    android:textSize="@dimen/base_medium_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:text="中山大学软件学院学生"
                    android:textSize="@dimen/base_medium_font"
                    android:textColor="@color/black_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="2/10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <View
                android:background="@color/gray_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_small_margin"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/base_margin"
                android:paddingRight="@dimen/base_margin"
                android:paddingTop="@dimen/base_margin"
                android:paddingBottom="@dimen/base_margin">
                <TextView
                    android:text="简介"
                    android:textSize="@dimen/base_medium_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/base_margin"/>
                <TextView
                    android:text="爱好产品，曾在腾讯工作，对软件编写，电子有一定的了解，从事软件行业好多年"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/base_medium_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/base_margin"/>
                <TextView
                    android:text="49/50"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:background="@color/gray_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_small_margin"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/base_margin"
                android:paddingRight="@dimen/base_margin"
                android:stretchColumns="1" >
                <TableRow
                    android:paddingTop="@dimen/base_margin"
                    android:paddingBottom="@dimen/base_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/base_medium_font"
                        android:text="学校" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/base_medium_font"
                        android:textColor="@color/black_color"
                        android:layout_marginLeft="@dimen/base_medium_font"
                        android:text="中山大学" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/base_big_font"
                        android:paddingRight="@dimen/base_margin"
                        android:text=">" />
                </TableRow>

                <View
                    android:background="@color/gray_color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TableRow
                    android:paddingTop="@dimen/base_margin"
                    android:paddingBottom="@dimen/base_margin"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/base_medium_font"
                        android:text="专业" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/base_medium_font"
                        android:textColor="@color/black_color"
                        android:layout_marginLeft="@dimen/base_medium_font"
                        android:text="软件工程" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/base_big_font"
                        android:paddingRight="@dimen/base_margin"
                        android:text=">" />
                </TableRow>

                <View
                    android:background="@color/gray_color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TableRow
                    android:paddingTop="@dimen/base_margin"
                    android:paddingBottom="@dimen/base_margin"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/base_medium_font"
                        android:text="年级" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/base_medium_font"
                        android:textColor="@color/black_color"
                        android:layout_marginLeft="@dimen/base_medium_font"
                        android:text="2014级本科生" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/base_medium_font"
                        android:text=">" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
