<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xuewen.xuewen.AskActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFCCCCCC"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <TextView
                android:text="问题详情"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:layout_marginBottom="@dimen/base_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/headimgurl"
                android:src="@mipmap/avatar"
                android:layout_marginRight="@dimen/base_margin"
                android:layout_width="@dimen/base_small_avatar"
                android:layout_height="@dimen/base_small_avatar" />
            <TextView
                android:id="@+id/username"
                android:text="张三"
                android:textSize="@dimen/base_medium_font"
                android:textColor="@color/black_color"
                android:layout_toRightOf="@id/headimgurl"
                android:layout_marginBottom="@dimen/base_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/followed"
                android:text="200人关注, 回答了20个问题"
                android:layout_below="@+id/username"
                android:layout_toRightOf="@+id/headimgurl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="经关注"
                android:layout_alignParentRight="true"
                android:background="@drawable/radius_button_shape"
                android:textColor="@color/white_color"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/base_icon"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/school"
            android:layout_marginBottom="@dimen/base_margin"
            android:text="中山大学软件工程学士"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="爱好产品策划，曾在腾讯实习，略懂开发"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:background="@drawable/edit_text_border"
            android:hint="在这里写下你的问题，等待TA回答"
            android:gravity="top"
            android:paddingTop="@dimen/base_margin"
            android:paddingLeft="@dimen/base_margin"
            android:layout_marginBottom="@dimen/base_margin"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
        <Button
            android:text="提问"
            android:textColor="@color/main_color"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
