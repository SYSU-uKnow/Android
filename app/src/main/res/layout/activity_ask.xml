<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xuewen.xuewen.AskActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/coordinator_appbar"
        android:background="#00ff00ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="?attr/actionBarSize"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <RelativeLayout
                    android:layout_marginBottom="@dimen/base_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/headimgurl"
                        android:src="@mipmap/avatar"
                        android:layout_marginRight="@dimen/base_margin"
                        android:layout_width="@dimen/base_small_avatar"
                        android:layout_height="@dimen/base_small_avatar" />
                    <TextView
                        android:id="@+id/username"
                        android:text="张三"
                        android:textSize="@dimen/base_medium_font"
                        android:textColor="@color/black_color"
                        android:layout_toRightOf="@id/headimgurl"
                        android:layout_marginBottom="@dimen/base_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/followed"
                        android:text="200人关注, 回答了20个问题"
                        android:layout_below="@+id/username"
                        android:layout_toRightOf="@+id/headimgurl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Button
                        android:text="已关注"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/radius_button_shape"
                        android:textColor="@color/white_color"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/school"
                    android:layout_marginBottom="@dimen/base_margin"
                    android:text="中山大学软件工程学士"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="爱好产品策划，曾在腾讯实习，略懂开发"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:background="@drawable/edit_text_border"
                    android:hint="在这里写下你的问题，等待TA回答"
                    android:gravity="top"
                    android:paddingTop="@dimen/base_margin"
                    android:paddingLeft="@dimen/base_margin"
                    android:layout_marginBottom="@dimen/base_margin"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
                <Button
                    android:text="提问"
                    android:background="@drawable/button_border"
                    android:textColor="@color/main_color"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" />
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#FFCCCCCC"
                app:layout_collapseMode="pin"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:popupTheme="@style/AppTheme.PopupOverlay">
                <TextView
                    android:text="问题详情"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>


        <View
            android:background="@color/gray_color"
            android:layout_width="match_parent"
            android:layout_height="1px">
        </View>
        <TextView
            android:text="TA回答的:"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/gray_color"
            android:layout_width="match_parent"
            android:layout_height="1px">
        </View>

    </android.support.design.widget.AppBarLayout>

    <ListView
        android:id="@+id/question_list_view"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</android.support.design.widget.CoordinatorLayout>
